{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "strict": false,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["ES2020", "DOM"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/*.ts",
    "src/*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/**/*.ts",
    "src/**/**/*.d.ts",
    "src/types/*.d.ts",
    "dist/index.d.ts",
    "docs/tsconfig.json"
  ],
  "exclude": ["node_modules"]
}
